<h1>Sign up</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal col-md-6 col-md-offset-3"}) do |f| %>
  <%= devise_error_messages! %>

   <div class="form-group">
    <%= f.email_field :email, placeholder: "Email", class: "form-control", autofocus: true %>
  </div>

   <div class="form-group">
    <%= f.text_field :first_name, placeholder: "First Name", class: "form-control" %>
  </div>

   <div class="form-group">
    <%= f.text_field :last_name, placeholder: "Last Name", class: "form-control" %>
  </div>

  <div class="form-group">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, placeholder: "Password",  autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, placeholder: "Password Confirmation",  autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Sign in", class: "btn btn-large btn-primary btn-block" %>
  </div>

  <div class="form-group">
    <%= render "devise/shared/links" %>
  </div>

<% end %>
