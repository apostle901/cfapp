<h1>Contact Us</h1>

<%= flash[:notice] %>

<%= form_tag("/static_pages/thank_you") do %>
<div class="row">
  <div class="col-md-4 contact-form">
    <div class="form-group contact-name">
      <%= label_tag :name %>
      <%= text_field :name, nil, class: "form-control", placeholder: "Enter Name" %>
    </div>      
    <div class="form-group contact-email">
      <%= label_tag :email, "Email Address" %>
      <%= email_field :email, nil, class: "form-control", placeholder: "Enter Email" %>
    </div>
    <div class="form-group contact-message">
      <%= label_tag :message %>
      <%= text_area :message, nil, class: "form-control", placeholder: "Enter Message" %>
    </div>      
  </div>
</div>
<%= submit_tag "Send" %>   
<% end %>
