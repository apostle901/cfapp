<% if signed_in? %>
  <h4 class="col-md-offset-3">Add a review:</h4>
  <%= form_for([@product, @product.comments.build], html: {class: "form-horizontal col-sm-12 col-md-offset-3"}) do |f| %>
    <div class="form-group">
      <%= f.text_area :body, placeholder: "Comments", class: "form-control", autofocus: true %>
    </div>
    <div class="form-group">
      <div class="rating"></div>
    </div>
    <div class="form-group">
      <%= f.submit "Leave Comment", class: "btn btn-large btn-primary btn-block" %>
    </div>
  <% end %>
<% end %>

