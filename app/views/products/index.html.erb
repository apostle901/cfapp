<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Products</h1>

  <table class="table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Image url</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.description %></td>
          <td><%= product.image_url %></td>
          <td><%= link_to 'Show', product, class: 'btn btn-default btn-sm' %></td>
          <td><%= link_to 'Edit', edit_product_path(product), class: 'btn btn-default btn-sm' %></td>
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-sm' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

  <br>
<%= link_to 'New Product', new_product_path %>
